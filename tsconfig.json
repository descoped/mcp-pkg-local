{
  "compilerOptions": {
    "target": "ES2023",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2023"],
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "#types": ["./src/types.ts", "./src/types"],
      "#server": ["./src/server.ts", "./src/server"],
      "#scanners/base": ["./src/scanners/base.ts", "./src/scanners/base"],
      "#scanners/python": ["./src/scanners/python.ts", "./src/scanners/python"],
      "#scanners/nodejs": ["./src/scanners/nodejs.ts", "./src/scanners/nodejs"],
      "#scanners/*": ["./src/scanners/*"],
      "#tools/scan-packages": ["./src/tools/scan-packages.ts", "./src/tools/scan-packages"],
      "#tools/read-package": ["./src/tools/read-package.ts", "./src/tools/read-package"],
      "#tools/*": ["./src/tools/*"],
      "#utils/cache": ["./src/utils/cache.ts", "./src/utils/cache"],
      "#utils/fs": ["./src/utils/fs.ts", "./src/utils/fs"],
      "#utils/scanner-factory": ["./src/utils/scanner-factory.ts", "./src/utils/scanner-factory"],
      "#utils/*": ["./src/utils/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "tests/**/*", "scripts/**/*", "vitest.config.ts"],
  "exclude": ["node_modules", "dist", "coverage"]
}